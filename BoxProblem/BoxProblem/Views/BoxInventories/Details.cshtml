@model BoxProblem.Data.BoxInventory

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div id="header" class="row">Out-of-the-Box Boxing</div>
    <div class="row">
        <div class="col-lg-10">
            <table class="table table-hover">
                <thead>
                    <tr id="chartrow">
                        <th>
                            @Html.DisplayNameFor(model => model.Weight)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Volume)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CanHoldLiquid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InventoryCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th id="chart"></th>
                    </tr>
                </thead>
                <tbody class="myTable" id="myTable">
                        <tr id="chartrow">
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Volume)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.CanHoldLiquid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Cost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.InventoryCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.CreatedAt)
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <button class="btn-original"><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a></button>
    <button class="btn-original"><a asp-action="Index">Back to List</a></button>
</div>
